module body Example.String is
    pragma Unsafe_Module;

    function Put_Character(character: Nat8): Int32 is
        pragma Foreign_Import(External_Name => "putchar");
    end;

    function Put_String(str: Fixed_Array[Nat8]): Int32 is
        pragma Foreign_Import(External_Name => "puts");
    end;

    function Main(root: RootCapability): RootCapability is
        let X: Fixed_Array[Nat8] := "Hello, world!";
        let len: Index := Fixed_Array_Size(X);
        if len = 13 then
            Put_Character(X[0]);
            Put_String(X);
        end if;
        Put_String(
            """A"""
        );
        Put_String(
            """A
            """
        );
        Put_String(
            """
                A"""
        );
        Put_String(
            """
                A
            """
        );
        Put_String(
            """
                A
                    B
            """
        );
        Put_String(
            """
                A
                    B
                C
            """
        );
        return root;
    end;
end module body.
