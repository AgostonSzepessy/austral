;; -*- mode: lisp -*-

(defrecord string ()
  (length usize)
  (data   (paddress u8)))

(defun make-string ((length usize) (data (paddress u8))) string
  "Construct a string from its size and address in memory."
  (record string
          (length length)
          (data data)))

(defun string-length ((string string)) usize
  (slot string length))

(defun string-address ((string string)) (paddress u8)
  (slot string data))

(defun main () i32
  0)
