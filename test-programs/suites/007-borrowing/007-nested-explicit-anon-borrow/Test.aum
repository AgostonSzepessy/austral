module body Test is
    record Foo: Linear is
        bar: Nat8;
    end;

    function Main(root: Root_Capability): Root_Capability is
        -- Create a linear record.
        let foo: Foo := Foo(bar => 'a');
        -- Borrow it.
        borrow foo as fooref in rho do
            -- Borrow it again.
            &foo;
        end;
        -- Consume the record by destructuring.
        let { bar: Nat8 } := foo;
        return root;
    end;
end module body.
