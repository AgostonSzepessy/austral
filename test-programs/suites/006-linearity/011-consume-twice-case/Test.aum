module body Test is
    record R : Linear is
        x: Int32;
    end;

    function Consume(rec: R): Unit is
        let { x: Int32 } := rec;
        return nil;
    end;

    function Main(root: Root_Capability): Root_Capability is
        let r: R := R(x => 32);
        let ropt: Option[R] := Some(value => r);
        case ropt of
            when Some(value: R) do
                Consume(value);
                Consume(value);
            when None do
                skip;
        end case;
        return root;
    end;
end module body.
